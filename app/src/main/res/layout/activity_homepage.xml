<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DF73CD"
    tools:context=".Homepage">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:text="HomePage"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/aupalcon"
        android:layout_below="@id/title"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Welcome"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/image"
        android:id="@+id/welcome"/>
    <TextView
        android:id="@+id/nama"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/outline_person_2_24"
        android:layout_below="@id/welcome"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="My Phone Number"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/nama"
        android:layout_marginTop="15dp"
        android:id="@+id/number"/>
    <TextView
        android:id="@+id/phone"
        android:gravity="center"
        android:textColor="@color/black"
        android:drawableStart="@drawable/baseline_phone_enabled_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myemail"
        android:text="My Email"
        android:textColor="@color/black"
        android:layout_below="@id/phone"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/mail"
        android:gravity="center"
        android:textColor="@color/black"
        android:drawableStart="@drawable/outline_mail_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myemail"
        />







    
    
</RelativeLayout>